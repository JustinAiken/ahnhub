<h1>Listing repositories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Description</th>
    <th>Homepage</th>
    <th>Watchers</th>
    <th>Forks</th>
    <th>Privateflag</th>
    <th>Ownername</th>
    <th>Owneremail</th>
  </tr>

<% @repositories.each do |repository| %>
  <tr>
    <td><%=h repository.name %></td>
    <td><%=h repository.url %></td>
    <td><%=h repository.description %></td>
    <td><%=h repository.homepage %></td>
    <td><%=h repository.watchers %></td>
    <td><%=h repository.forks %></td>
    <td><%=h repository.privateflag %></td>
    <td><%=h repository.ownername %></td>
    <td><%=h repository.owneremail %></td>
    <td><%= link_to 'Show', repository %></td>
    <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
    <td><%= link_to 'Destroy', repository, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @repositories %>

<%= link_to 'New repository', new_repository_path %>